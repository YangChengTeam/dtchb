<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="10dp"
    android:layout_height="90dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/withdraw_bg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_times"
                android:paddingLeft="5dp"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:textColor="#F6FF00"
                android:text="倒计时：09：01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/A1_000000"
                    android:textSize="15sp"
                    android:text="恭喜获得"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_moneys"
                    android:textColor="#FF1849"
                    android:textSize="20sp"
                    android:text="0.00元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/A1_000000"
                    android:textSize="15sp"
                    android:text="提现额度"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="7dp"
                android:textSize="15sp"
                android:textColor="#00C000"
                android:text="赶紧提现到微信吧！"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/line_status"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/tv_sure"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:background="@drawable/line_bg_yellow4"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="立即提现"
                android:layout_width="78dp"
                android:layout_height="29dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>