<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/line_bg_white3"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/ll_bg"
    android:layout_height="wrap_content">
   <ImageView
       android:scaleType="fitXY"
       android:src="@drawable/bg_upgrade"
       android:layout_width="match_parent"
       android:layout_height="150dp"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_jishu"
            android:layout_marginTop="2dp"
            android:textSize="68sp"
            android:textColor="#FF6D00"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:textColor="@color/A1_333333"
            android:textSize="18sp"
            android:text="级"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="6dp"
        android:textColor="@color/A1_999999"
        android:textSize="13sp"
        android:text="明天可以继续来升级喔~"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_know_btn"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:textColor="#FB9E3E"
        android:textSize="16sp"
        android:text="知道了"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>