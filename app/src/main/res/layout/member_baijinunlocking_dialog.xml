<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_bg"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:background="@drawable/tv_bg_gray10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="210dp"/>
        <TextView
            android:id="@+id/tv_tixian"
            android:layout_marginBottom="17dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="分红奖励，每天可提"
            android:background="@drawable/tv_red_ee492a"
            android:layout_width="180dp"
            android:layout_height="34dp"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_titles"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="升级解锁"
            android:background="@drawable/icon_titlebg_mem"
            android:layout_width="150dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_marginRight="8dp"
            android:layout_marginTop="-2dp"
            android:padding="4dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_closebtn_mem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</RelativeLayout>