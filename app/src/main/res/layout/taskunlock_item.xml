<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/line_bg_white3"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp">
            <ImageView
                android:id="@+id/iv_icons"
                android:layout_marginLeft="4dp"
                android:src="@drawable/icon_video_mem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/A1_333333"
                android:textSize="16sp"
                android:text="领取今日快速升级"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_lookVideoUnlockingOne"
                android:layout_marginRight="12dp"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:background="@drawable/line_bg_yellow11"
                android:gravity="center"
                android:text="去完成"
                android:layout_width="56dp"
                android:layout_height="24dp"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="38dp"
            android:background="#E2E2E2"
            android:layout_width="wrap_content"
            android:layout_height="0.6dp"/>
        <TextView
            android:id="@+id/tv_des"
            android:paddingLeft="30dp"
            android:gravity="center_vertical"
            android:textColor="@color/A1_999999"
            android:textSize="12sp"
            android:text="看精彩视频，领今日加速权限"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>