<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/f2f2f2"
    tools:context=".homeModule.activity.ShareWithDrawActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/invation_bg2"
                android:layout_width="match_parent"
                android:layout_height="210dp"/>
            <ImageView
                android:id="@+id/iv_back"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="5dp"
                android:padding="15dp"
                android:src="@drawable/back_white1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:alpha="0.7"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/tv_rule"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="兑换规则"
                android:layout_width="wrap_content"
                android:layout_height="36dp"/>

            <TextView
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="可兑换邀请人数"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="95dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_invation_people"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="-56dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/line_bg_white3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/exchange_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_marginTop="33dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginBottom="13dp"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/in_icon_upgrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:text="升级卷兑换"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginBottom="14dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/exchange_recyclerView"
                        android:textColor="@color/A1_999999"
                        android:textSize="12sp"
                        android:text="请选择您要兑换的等级"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/line_bg_white3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/withDraw_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_marginTop="33dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginBottom="13dp"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/in_icon_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:text="现金兑换"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginBottom="14dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/withDraw_recyclerView"
                        android:textColor="@color/A1_999999"
                        android:textSize="12sp"
                        android:text="请选择您要兑换的金额"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#e2e2e2"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"/>
        <TextView
            android:id="@+id/tv_sure"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_invite_btn_sure"
            android:text="兑换邀请奖励"
            android:layout_width="match_parent"
            android:layout_height="54dp"/>
    </LinearLayout>
</LinearLayout>