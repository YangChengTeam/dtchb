<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="right"
    android:id="@+id/ll_bg"
    android:layout_height="match_parent">
          <View
              android:id="@+id/view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_marginTop="18dp"
        android:id="@+id/line_lineRed"
        android:gravity="center"
        android:background="@drawable/answer_bg_red1"
        android:layout_width="78dp"
        android:layout_height="78dp">
        <RelativeLayout
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="46dp">
            <ImageView
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:id="@+id/iv_red"
                android:src="@drawable/bg_treasure"
                android:layout_width="wrap_content"
                android:layout_height="47dp"/>
            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/tv_redTimes"
                android:text="在线红包"
                android:layout_marginBottom="1dp"
                android:layout_alignParentBottom="true"
                android:textColor="#EB1054"
                android:textSize="11sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="100dp"
        android:background="@drawable/line_bg_white5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/line_times"
            android:visibility="visible"
            android:gravity="center"
            android:background="@drawable/tv_bg_black6"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="176dp"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_hour"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:textSize="14sp"
                android:textColor="#FBCB0C"
                android:text="后可拆红包"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>