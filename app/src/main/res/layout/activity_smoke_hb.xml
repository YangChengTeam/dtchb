<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_index"
    android:orientation="vertical"
    tools:context=".homeModule.activity.SmokeHbActivity">
    <RelativeLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="3dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_comeback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_marginLeft="14dp"
           android:layout_marginRight="14dp"
           android:orientation="vertical"
           android:layout_marginTop="230dp"
           android:background="@drawable/line_bg_yellow10"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_marginTop="8dp"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/tv_redNums"
                   android:textStyle="bold"
                   android:textColor="#964500"
                   android:textSize="16sp"
                   android:layout_marginLeft="13dp"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:text="今日红包剩余：0"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:id="@+id/tv_select"
                   android:paddingBottom="5dp"
                   android:paddingTop="5dp"
                   android:paddingLeft="5dp"
                   android:gravity="center_vertical"
                   android:drawablePadding="3dp"
                   android:drawableLeft="@drawable/icon_selected"
                   android:layout_marginRight="13dp"
                   android:textStyle="bold"
                   android:textColor="#964500"
                   android:textSize="16sp"
                   android:text="自动抽取红包"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <com.yc.redevenlopes.homeModule.widget.ScrollWithRecyclerView
               android:id="@+id/recyclerView"
               android:layout_marginLeft="18dp"
               android:layout_marginRight="18dp"
               android:layout_width="match_parent"
               android:layout_marginBottom="20dp"
               android:layout_height="match_parent"/>
       </LinearLayout>
   </androidx.core.widget.NestedScrollView>
</RelativeLayout>