<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_bg"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">
   <LinearLayout
       android:gravity="center_horizontal"
       android:orientation="vertical"
       android:background="@drawable/home_game_icon1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:layout_marginTop="68dp"
           android:src="@drawable/home_game_icon2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <LinearLayout
           android:layout_marginTop="12dp"
           android:background="@color/white"
           android:layout_marginRight="56dp"
           android:layout_marginLeft="54dp"
           android:gravity="center_vertical"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="63dp">

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="4dp"
               android:src="@drawable/game_hb" />
           <LinearLayout
               android:layout_marginLeft="2dp"
               android:layout_weight="1"
               android:orientation="vertical"
               android:layout_width="0dp"
               android:layout_height="wrap_content">
               <TextView
                   android:textColor="@color/A1_000000"
                   android:textSize="12sp"
                   android:text="1.提现无封顶，日赚百元"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:layout_marginTop="6dp"
                   android:textColor="#C52912"
                   android:textSize="12sp"
                   android:text="完成试玩任务即可提现"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <TextView
               android:id="@+id/tv_go"
               android:textSize="15sp"
               android:layout_marginRight="4dp"
               android:textColor="@color/white"
               android:background="@drawable/line_bg_yellow4"
               android:gravity="center"
               android:text="前往"
               android:layout_width="52dp"
               android:layout_height="28dp"/>
       </LinearLayout>

       <LinearLayout

           android:layout_marginTop="12dp"
           android:background="@color/white"
           android:layout_marginRight="56dp"
           android:layout_marginLeft="54dp"
           android:gravity="center_vertical"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="91dp">
           <LinearLayout
               android:gravity="center_vertical"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="4dp"
                   android:src="@drawable/game_tx" />
               <LinearLayout
                   android:layout_marginLeft="2dp"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textColor="@color/A1_000000"
                       android:textSize="12sp"
                       android:text="2.游戏钱包"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:layout_marginTop="6dp"
                       android:textColor="#C52912"
                       android:textSize="12sp"
                       android:text="试玩成功返回可领取活跃值"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
               <TextView
                   android:id="@+id/tv_getHot"
                   android:textSize="15sp"
                   android:layout_marginRight="4dp"
                   android:textColor="@color/white"
                   android:background="@drawable/tv_red8"
                   android:gravity="center"
                   android:text="领取"
                   android:layout_width="52dp"
                   android:layout_height="28dp"/>
           </LinearLayout>
           <TextView
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="10dp"
               android:paddingBottom="4dp"
               android:paddingTop="4dp"
               android:paddingRight="10dp"
               android:paddingLeft="10dp"
               android:background="@drawable/tv_red14"
               android:textColor="#C52912"
               android:textSize="12sp"
               android:text="每天活跃值领取次数有限额，先到先得！"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>
   </LinearLayout>
    <ImageView
        android:id="@+id/iv_close"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:padding="9dp"
        android:src="@drawable/close3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>