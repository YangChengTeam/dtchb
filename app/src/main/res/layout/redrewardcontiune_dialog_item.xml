<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/ll_bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_hbs"
            android:layout_width="34dp"
            android:layout_height="45dp"/>
        <LinearLayout
            android:layout_marginLeft="-3dp"
            android:background="@drawable/tv_bg_black4"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:alpha="0.9"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/tv_money"
                android:layout_marginRight="7dp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="1.0元"
                android:layout_width="wrap_content"
                android:layout_height="23dp"/>
            <TextView
                android:id="@+id/tv_withDraw"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:gravity="center"
                android:background="@drawable/tv_bg_white1"
                android:textColor="#FF2E30"
                android:textSize="12sp"
                android:text="提现"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:src="@drawable/icon_diialog_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/line_bg_white5"
            android:layout_width="wrap_content"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/A1_333333"
                android:textSize="10sp"
                android:text="再赚60.15元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="2dp"
                android:textColor="@color/A1_333333"
                android:textSize="10sp"
                android:text="再赚60.15元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="90dp"
        android:src="@drawable/lianduizhongjie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="继续答对"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_continueAn"
            android:textColor="#FFE33B"
            android:textSize="17sp"
            android:text="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="道题，可以"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#FFE33B"
            android:textSize="17sp"
            android:text="提现"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#FFE33B"
            android:textSize="17sp"
            android:text="哦"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="46dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:text="复活后可连对不中断"
            android:background="@drawable/zdind"
            android:layout_width="213dp"
            android:layout_height="39dp"/>
        <LinearLayout
            android:id="@+id/line_sure"
            android:background="@drawable/line_bg_green5"
            android:gravity="center"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_marginRight="15dp"
                android:src="@drawable/video2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:text="复活重新领奖"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_marginTop="18dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:padding="10dp"
        android:text="领奖，开始下一题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>