<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/ll_bg"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/line_contents"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:gravity="center_horizontal"
        android:background="@drawable/line_bg_white3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="45dp"
            android:textColor="#404040"
            android:textSize="16sp"
            android:text="获取幸运红包"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="18dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="40sp"
                android:textColor="#FFC446"
                android:text="0.20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#FFC446"
                android:textSize="16sp"
                android:text="元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:background="@drawable/tv_red_ee492a"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_level"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="翻倍奖励"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_level"
                android:background="@drawable/bg_doubled"
                android:layout_width="29dp"
                android:layout_height="15dp">
                <TextView
                    android:gravity="center_vertical"
                    android:textSize="11sp"
                    android:textColor="#EE492A"
                    android:text="x4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </RelativeLayout>
        <TextView
            android:layout_marginTop="13dp"
            android:textColor="@color/A1_999999"
            android:textSize="14sp"
            android:text="猜你喜欢"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:background="@color/actionsheet_blue"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="165dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/line_contents"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_marginTop="-2dp"
            android:background="@color/white"
            android:layout_width="1.3dp"
            android:layout_height="36dp"/>
        <ImageView
            android:src="@drawable/icon_closebtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:layout_centerHorizontal="true"
        android:src="@drawable/bg_goldcopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>