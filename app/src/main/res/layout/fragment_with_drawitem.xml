<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homeModule.fragment.WithDrawitemFragment">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <LinearLayout
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:background="@drawable/line_bg_yellow9"
          android:layout_marginTop="20dp"
          android:layout_marginRight="18dp"
          android:layout_marginLeft="18dp"
          android:layout_width="match_parent"
          android:layout_height="60dp">
         <RelativeLayout
             android:layout_marginLeft="37dp"
             android:id="@+id/rela_avatar"
             android:layout_width="wrap_content"
             android:layout_height="50dp">
            <ImageView
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_avatar"
                android:layout_marginLeft="16dp"
                android:src="@drawable/taskfg_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_level"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="#8C4B11"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
         </RelativeLayout>

         <LinearLayout
             android:layout_marginLeft="25dp"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
             <TextView
                 android:textColor="@color/A1_000000"
                 android:textSize="13sp"
                 android:text="现金账户："
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_cashMoney"
                android:textColor="#E72903"
                android:textSize="20sp"
                android:text="482.57"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#E72903"
                android:textSize="16sp"
                android:text="元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
         </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:visibility="gone"
          android:gravity="center_vertical"
          android:background="@drawable/line_bg_yellow11"
          android:layout_marginTop="18dp"
          android:layout_marginRight="18dp"
          android:layout_marginLeft="18dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="78dp">
          <LinearLayout
              android:layout_weight="1"
              android:paddingLeft="15dp"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_height="match_parent">
             <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:text="距离下次"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#E72903"
                    android:textSize="12sp"
                    android:text="提现"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:text="还有任务未完成"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
             </LinearLayout>
             <ProgressBar
                 android:id="@+id/progressbar_reward"
                 style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="8dp"
                 android:layout_marginEnd="30dp"
                 android:progressDrawable="@drawable/vip_reward_progress_bar_horizontal"
                 android:progress="30"
                 android:layout_marginTop="6dp"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:textColor="@color/A1_999999"
                    android:textSize="10sp"
                    android:text="答题即可提现！机会多多、金额不限"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
          </LinearLayout>

         <TextView
             android:id="@+id/tv_go"
             android:textColor="#E72903"
             android:background="@drawable/line_bg_red1"
             android:layout_marginLeft="12dp"
             android:layout_marginRight="12dp"
             android:gravity="center"
             android:textSize="12sp"
             android:text="去完成"
             android:layout_width="61dp"
             android:layout_height="26dp"/>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/line_invation"
          android:gravity="center_vertical"
          android:orientation="vertical"
          android:background="@drawable/line_bg_yellow11"
          android:layout_marginTop="14dp"
          android:layout_marginRight="18dp"
          android:layout_marginLeft="18dp"
          android:layout_width="match_parent"
          android:layout_height="66dp">
         <LinearLayout
             android:layout_marginLeft="14dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:textColor="@color/A1_000000"
                 android:textSize="13sp"
                 android:text="分享好友，就可以直接提"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#E72903"
                android:textSize="13sp"
                android:text="【55元】"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/A1_000000"
                android:textSize="13sp"
                android:text="高额奖励"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
         </LinearLayout>
         <LinearLayout
             android:layout_marginTop="6dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <TextView
                android:textColor="#E72903"
                android:layout_marginLeft="10dp"
                android:textSize="11sp"
                android:text="【没有等级要求】快去提现吧！"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="13dp"
                android:textColor="#FBD53F"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/line_bg_red9"
                android:text="去提现"
                android:layout_width="60dp"
                android:layout_height="20dp"/>

         </LinearLayout>

      </LinearLayout>


      <LinearLayout
          android:id="@+id/line_dayCashTitle"
          android:layout_marginTop="10dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <TextView
             android:layout_marginLeft="20dp"
             android:layout_weight="1"
             android:textSize="16sp"
             android:textColor="@color/A1_000000"
             android:text="每日提现"
             android:layout_width="0dp"
             android:layout_height="wrap_content"/>
         <TextView
             android:paddingBottom="4dp"
             android:paddingTop="4dp"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:id="@+id/tv_recodeThree"
             android:layout_marginRight="10dp"
             android:textColor="@color/A1_999999"
             android:textSize="10sp"
             android:text="提现记录>"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
      </LinearLayout>

      <LinearLayout
          android:id="@+id/line_dayCash"
          android:layout_marginLeft="13dp"
          android:layout_marginTop="13dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <RelativeLayout
             android:layout_weight="1"
             android:layout_width="0dp"
             android:background="@drawable/line_bg_yellow12"
             android:id="@+id/rela_dayCash_item"
             android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_dayCashStatus"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:text="仅一次"
                android:background="@drawable/line_bg_yellow13"
                android:layout_width="42dp"
                android:layout_height="13dp">
            </TextView>
            <TextView
                android:id="@+id/tv_dayCashMoneys"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#FB9D3F"
                android:textSize="16sp"
                android:text="300元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_dayCashSelect"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/withdrawfg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
         </RelativeLayout>
         <RelativeLayout
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="50dp"/>
         <RelativeLayout
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="50dp"/>
      </LinearLayout>

      <LinearLayout
          android:gravity="center_vertical"
          android:layout_marginTop="10dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_marginLeft="20dp"
              android:layout_weight="1"
              android:textSize="16sp"
              android:textColor="@color/A1_000000"
              android:text="常规提现"
              android:layout_width="0dp"
              android:layout_height="wrap_content"/>
         <TextView
             android:paddingBottom="4dp"
             android:paddingTop="4dp"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:id="@+id/tv_recode"
             android:layout_marginRight="10dp"
             android:textColor="@color/A1_999999"
             android:textSize="10sp"
             android:text="提现记录>"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
      </LinearLayout>
      <com.yc.qqzz.widget.ScrollWithRecyclerView
          android:id="@+id/recyclerView"
          android:layout_marginTop="10dp"
          android:layout_marginRight="13dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_marginBottom="30dp"
          android:id="@+id/tv_sure"
          android:layout_marginTop="22dp"
          android:gravity="center"
          android:textColor="@color/white"
          android:textSize="16sp"
          android:background="@drawable/line_bg_yellow8"
          android:layout_marginLeft="18dp"
          android:layout_marginRight="18dp"
          android:text="立即提现"
          android:layout_width="match_parent"
          android:layout_height="45dp"/>
   </LinearLayout>
</androidx.core.widget.NestedScrollView>