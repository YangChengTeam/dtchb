<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context=".beans.fragment.HomeFragment">

    <RelativeLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="52dp">
            <ImageView
                android:id="@+id/iv_invations"
                android:layout_marginLeft="10dp"
                android:padding="6dp"
                android:layout_centerVertical="true"
                android:src="@drawable/homefg_invations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_titles"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="答题拆红包"
                android:textColor="@color/A1_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/line_moneyJunp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/homefg_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:minWidth="65dp"
                    android:background="@drawable/tv_red1"
                    android:layout_marginLeft="-12dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp">
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:alpha="0.9"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/tv_money"
                        android:layout_centerVertical="true"
                        android:textColor="#FF1849"
                        android:textSize="14sp"
                        android:text="1.00"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"/>
                    <TextView
                        android:layout_marginRight="14dp"
                        android:layout_marginLeft="2dp"
                        android:textSize="11sp"
                        android:textColor="#FF1849"
                        android:text="元"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="-10dp"
                    android:background="@drawable/tv_red2"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:gravity="center"
                    android:text="提现"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/white"
            android:id="@+id/line_red"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <RelativeLayout
                android:layout_marginLeft="14dp"
                android:layout_width="48dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/homefg_videos"
                    android:layout_width="43dp"
                    android:layout_height="43dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="9dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:text="手气红包群"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="6dp"
                        android:gravity="center"
                        android:background="@drawable/tv_red3"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:text="红包"
                        android:layout_width="45dp"
                        android:layout_height="18dp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="2dp"
                    android:textColor="#FF1849"
                    android:textSize="14sp"
                    android:text="看视频领红包，提现轻松到手！"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/line_lineAnswer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:scaleType="fitXY"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/homefg_answer"
            android:layout_width="43dp"
            android:layout_height="43dp"/>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="答题玩法"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="2dp"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="答题就能赚钱，一键轻松提现！"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/line_lineredwall"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:scaleType="fitXY"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/homefg_reds"
            android:layout_width="43dp"
            android:layout_height="43dp"/>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="现金红包墙"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="2dp"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="领取红包奖励，立即就能提现！"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_hot"
            android:layout_marginTop="120dp"
            android:layout_marginRight="22dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/homefg_huo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
