<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_bg"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_centerHorizontal="true"
        android:src="@drawable/home_new_icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="80dp"
        android:id="@+id/rela1"
        android:layout_width="match_parent"
        android:layout_height="245dp">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/home_new_bg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="63dp"
            android:id="@+id/tv1"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="#715500"
            android:text="恭喜获得奖励"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
       <LinearLayout
           android:gravity="center_horizontal"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/tv1"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textColor="#FF1849"
               android:textSize="21sp"
               android:text="+"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/tv_moneys"
               android:textStyle="bold"
               android:textColor="#FF1849"
               android:textSize="38sp"
               android:text="10"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_marginLeft="1dp"
               android:textColor="#FF1849"
               android:textSize="21sp"
               android:text="元"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>
        <TextView
            android:paddingBottom="1dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#494738"
            android:text="去提现"
            android:background="@drawable/home_new_bg1"
            android:id="@+id/tv_sure"
            android:layout_marginBottom="11dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="180dp"
            android:layout_height="50dp"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/rela1"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/fl_ad_container_money"
        android:layout_height="200dp"
        ></FrameLayout>

</RelativeLayout>