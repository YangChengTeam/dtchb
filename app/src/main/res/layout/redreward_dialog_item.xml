<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/ll_bg"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/withdrawsuccess1"
        android:layout_marginTop="120dp"
        android:layout_width="208dp"
        android:layout_height="200dp">
        <TextView
            android:id="@+id/tv_moneys"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:textColor="#E72903"
            android:textSize="34sp"
            android:text="+0.75元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:textColor="#FFFBD2"
            android:textSize="23sp"
            android:text="恭喜获得奖励"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_sure"
        android:background="@drawable/line_bg_yellow5"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/video_ico1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginLeft="11dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/A1_000000"
                android:textSize="17sp"
                android:text="领取"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/A1_000000"
                android:textSize="23sp"
                android:text="2-5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/A1_000000"
                android:textSize="17sp"
                android:text="倍奖励"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_marginTop="18dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:padding="10dp"
        android:text="领奖，开始下一题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_marginTop="22dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/fl_banner"
        android:layout_width="match_parent"
        android:layout_height="100dp">


    </FrameLayout>
</LinearLayout>