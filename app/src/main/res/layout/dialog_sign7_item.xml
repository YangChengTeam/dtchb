<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/ll_bg"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:background="@drawable/line_bg_white3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="20dp"
             android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_wechat_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="打款金额"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tv_moneys"
                android:textColor="#000000"
                android:textSize="56sp"
                android:text="50.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_moneys"
                android:id="@+id/tv1"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="#000000"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tv_moneys"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@drawable/line_bg_yellow15"
                android:text="最高"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:background="#E2E2E2"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"/>
        <RelativeLayout
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textColor="@color/A1_333333"
                android:textSize="12sp"
                android:text="打款账户"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_zhanghu"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/A1_666666"
                android:textSize="12sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textColor="@color/A1_333333"
                android:textSize="12sp"
                android:text="打款渠道"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/A1_666666"
                android:textSize="12sp"
                android:text="账户零钱"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_marginLeft="20dp"
              android:gravity="center_horizontal"
                android:orientation="vertical"
                android:minWidth="60dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/icon_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_gravity="right"
                    android:layerType="software"
                    android:layout_weight="1"
                    android:background="@drawable/tv_bg_green3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <ImageView
                    android:src="@drawable/icon_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#08B007"
                    android:textSize="13sp"
                    android:text="打款申请已提交"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_des"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    android:textColor="#08B007"
                    android:textSize="13sp"
                    android:text="仅需邀请5个用户即可获得打款资格"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sure"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:background="@drawable/tv_bg_green4"
            android:gravity="center"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="36dp"
            android:text="前往邀请加速打款"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_cancle"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:alpha="0.5"
        android:textColor="@color/white"
        android:text="放弃打款"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

</LinearLayout>