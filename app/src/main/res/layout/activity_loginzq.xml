<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <ImageView
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/slts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_user_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录即表明同意"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_user_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="用户协议"
            android:textColor="@color/orange_fb9e3e"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_tourist_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="游客登录"
        android:textColor="@color/gray_88ffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/ll_user_policy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_wx_login"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/wall_bg1"
        android:gravity="center_horizontal"
         >

        <TextView
            android:layout_marginTop="14dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="微信登录"
            android:textColor="#8C4B01"
            android:textSize="20sp"
            android:drawableLeft="@drawable/icon_login_wx" />

    </LinearLayout>


</RelativeLayout>