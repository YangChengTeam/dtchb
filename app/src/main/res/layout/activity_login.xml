<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:src="@mipmap/login_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_user_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录即表明同意"
            android:textColor="@color/gray_88ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_user_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="用户协议"
            android:textColor="@color/orange_fb9e3e"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tourist_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"

        android:text="游客登录"
        android:textColor="@color/gray_88ffffff"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/ll_user_policy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_qq_login"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="20dp"

        android:background="@drawable/login_stroke_bg"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/tv_tourist_login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="QQ登录"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/icon_login_qq" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wx_login"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="20dp"

        android:background="@drawable/login_stroke_bg"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/ll_qq_login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="微信登录"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/icon_login_wx" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>