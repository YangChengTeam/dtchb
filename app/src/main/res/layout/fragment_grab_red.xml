<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
     >
    <RelativeLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="3dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/top_return_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerInParent="true"
            android:textColor="@color/A1_000000"
            android:textSize="18sp"
            android:text="答题挑战"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/line_moneyJunp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:layout_marginLeft="6dp"
                android:src="@drawable/homefg_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:minWidth="65dp"
                android:background="@drawable/tv_red1"
                android:layout_marginLeft="-12dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="25dp">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:alpha="0.9"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/tv_money"
                    android:layout_centerVertical="true"
                    android:textColor="#FF1849"
                    android:textSize="14sp"
                    android:text="1.00"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"/>
                <TextView
                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="2dp"
                    android:textSize="11sp"
                    android:textColor="#FF1849"
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="-10dp"
                android:background="@drawable/tv_red2"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:gravity="center"
                android:text="提现"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="@color/A1_E2E2E2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@drawable/answer_bg2"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/line_soul"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:background="@drawable/tv_bg_green5"
                android:layout_width="51dp"
                android:layout_height="32dp">
                <ImageView
                    android:id="@+id/iv_ans_soul"
                    android:src="@drawable/answer_lbopen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="57dp"
                android:background="@drawable/answer_dtbg"
                android:layout_marginRight="19dp"
                android:layout_marginLeft="19dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="48dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#767957"
                        android:textSize="14sp"
                        android:text="第"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#F53F02"
                        android:textSize="14sp"
                        android:id="@+id/tv_answerNums"
                        android:text="102"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="#767957"
                        android:textSize="14sp"
                        android:text="题"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="#767957"
                        android:textSize="14sp"
                        android:layout_marginLeft="18dp"
                        android:text="答对题数："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#F53F02"
                        android:textSize="14sp"
                        android:id="@+id/tv_answerSureNums"
                        android:text="102"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/line_bg_white4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:text="123"
                        android:background="@drawable/tv_bg_green6"
                        android:layout_width="33dp"
                        android:layout_height="33dp"/>
                    <TextView
                        android:paddingBottom="6dp"
                        android:textStyle="bold"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/A1_333333"
                        android:id="@+id/tv_answerTitle"
                        android:layout_marginTop="12dp"
                        android:textSize="16sp"
                        android:text="下列哪个成语典故与项羽 有关？语典故与项语典故与项语典故与项语典故与项语典故与项"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="44dp"
                android:src="@drawable/answeri_tit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>