<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/line_lay"
    android:orientation="vertical"

    tools:context=".homeModule.fragment.HomeFragment">
    <LinearLayout
        android:background="#FB9D3F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/icon_hbs"
                    android:layout_width="34dp"
                    android:layout_height="45dp"/>
                <LinearLayout
                    android:layout_marginLeft="-3dp"
                    android:background="@drawable/tv_bg_black2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:alpha="0.9"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/tv_money"
                        android:layout_marginRight="7dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:text="1.0元"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"/>
                    <TextView
                        android:id="@+id/tv_withDraw"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="7dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:paddingRight="7dp"
                        android:paddingLeft="7dp"
                        android:gravity="center"
                        android:background="@drawable/tv_bg_white1"
                        android:textColor="#FF2E30"
                        android:textSize="12sp"
                        android:text="提现"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:id="@+id/rela_avatar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/iv_avatar"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_head"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="9dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/icon_scale"
                    android:layout_width="53dp"
                    android:layout_height="17dp">
                    <TextView
                        android:id="@+id/tv_rank"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/A1_EA5422"
                        android:textSize="12sp"
                        android:text="LV.1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_titles"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="红包群"
                android:textColor="@color/A1_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:background="@color/f2f2f2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/srl_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        <LinearLayout
            android:id="@+id/line_redzaixian"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="74dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp">
                <ImageView
                    android:layout_marginRight="12dp"
                    android:scaleType="fitXY"
                    android:id="@+id/iv_red"
                    android:src="@drawable/bg_treasure"
                    android:layout_width="64dp"
                    android:layout_height="49dp"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_redTimes"
                    android:text="在线红包"
                    android:layout_marginBottom="1dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="#EB1054"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <ImageView
                android:layout_gravity="right"
                android:id="@+id/iv_shouzaixian"
                android:visibility="visible"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_click2_shouzq"
                android:layout_width="40dp"
                android:layout_height="29dp"/>
        </LinearLayout>

    </RelativeLayout>



</LinearLayout>