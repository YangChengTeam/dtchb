<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="14dp"
    android:layout_marginLeft="14dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rela_item"
        android:background="@drawable/line_yellowbg_f99f5e"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageView
            android:layout_marginTop="19dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_select_level"
            android:src="@drawable/icon_grade4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/tv_select"
             android:layout_alignParentRight="true"
             android:gravity="center"
             android:textColor="@color/white"
             android:textSize="8sp"
             android:background="@drawable/line_yellowbg2_f99f5e"
             android:text="选中"
             android:layout_width="34dp"
             android:layout_height="15dp"/>
        <View
            android:id="@+id/views"
            android:layout_alignParentBottom="true"
            android:background="@drawable/line_yellowbg3_f99f5e"
            android:layout_width="match_parent"
            android:layout_height="18dp"/>
        <TextView
            android:id="@+id/tv_levels"
            android:layout_marginBottom="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="4级"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>