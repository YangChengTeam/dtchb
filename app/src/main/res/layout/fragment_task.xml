<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f2f2f2"
    android:orientation="vertical"
    >
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="74dp">
        <RelativeLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_titles"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="提现任务"
                android:textColor="@color/A1_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/line_moneyJunp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/homefg_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:minWidth="65dp"
                    android:background="@drawable/tv_red1"
                    android:layout_marginLeft="-12dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp">
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:alpha="0.9"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/tv_money"
                        android:layout_centerVertical="true"
                        android:textColor="#FF1849"
                        android:textSize="14sp"
                        android:text="1.00"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"/>
                    <TextView
                        android:layout_marginRight="14dp"
                        android:layout_marginLeft="2dp"
                        android:textSize="11sp"
                        android:textColor="#FF1849"
                        android:text="元"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="-10dp"
                    android:background="@drawable/tv_red2"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:gravity="center"
                    android:text="提现"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:background="@color/gray_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/line_moneyWall"
                android:background="@drawable/line_bg_yellow40"
                android:layout_marginTop="15dp"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="77dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/task_icon2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="19dp"
                        app:layout_constraintLeft_toRightOf="@+id/iv1"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/tv_title"
                        android:layout_marginLeft="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/A1_000000"
                        android:textSize="15sp"
                        android:text="现金红包墙"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/A1_999999"
                        android:layout_marginBottom="17dp"
                        app:layout_constraintLeft_toRightOf="@+id/iv1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="13sp"
                        android:id="@+id/tv_des"
                        android:layout_marginLeft="12dp"
                        android:text="无条件提现，抢多少，提现多少！"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:id="@+id/line_status"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_sure"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:background="@drawable/tv_red9"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="去提现"
                        android:layout_width="68dp"
                        android:layout_height="29dp"/>
                </LinearLayout>
            </LinearLayout>




            <com.yc.rrdsprj.widget.ScrollWithRecyclerView
                android:paddingTop="10dp"
                android:id="@+id/limited_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">
                <com.yc.rrdsprj.widget.ScrollWithRecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>