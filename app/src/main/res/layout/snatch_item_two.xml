<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/line_bg_white3"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/ll_bg"
    android:layout_height="wrap_content">
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:text="我的夺宝号"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="@drawable/line_bg_yellow8"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <TextView
            android:id="@+id/tv_prizeNums"
            android:textColor="#AB5B0F"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:textSize="16sp"
            android:text="152"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_sure"
        android:layout_marginBottom="23dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/tv_bg_gray7"
        android:gravity="center"
        android:textSize="14sp"
        android:text="知道了"
        android:layout_marginRight="23dp"
        android:layout_marginLeft="23dp"
        android:textColor="@color/A1_333333"
        android:layout_width="match_parent"
        android:layout_height="41dp"/>
</LinearLayout>