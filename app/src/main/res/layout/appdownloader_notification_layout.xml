<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/appdownloader_root"
    android:layout_width="fill_parent"
    android:layout_height="64.0dip"
    android:orientation="horizontal"
    android:padding="10.0dip">

    <ImageView
        android:id="@id/appdownloader_icon"
        android:layout_width="44.0dip"
        android:layout_height="44.0dip"
        android:layout_gravity="center"
        android:layout_marginRight="18.0dip"
        android:background="@drawable/appdownloader_action_bg"
        android:duplicateParentState="false"
        android:scaleType="center" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <TextView
            android:id="@id/appdownloader_desc"
            style="@style/appdownloader_style_notification_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true" />

        <LinearLayout
            android:id="@id/appdownloader_download_success"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appdownloader_desc"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@id/appdownloader_download_success_size"
                style="@style/appdownloader_style_notification_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12.0dip"
                android:ellipsize="end"
                android:gravity="center|left"
                android:singleLine="true" />

            <TextView
                android:id="@id/appdownloader_download_success_status"
                style="@style/appdownloader_style_notification_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center|left"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/appdownloader_download_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appdownloader_desc"
            android:orientation="horizontal">

            <TextView
                android:id="@id/appdownloader_download_size"
                style="@style/appdownloader_style_notification_text"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3.0"
                android:ellipsize="end"
                android:gravity="center|left"
                android:singleLine="true"
                android:textSize="10.0sp" />

            <TextView
                android:id="@id/appdownloader_download_status"
                style="@style/appdownloader_style_notification_text"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:ellipsize="end"
                android:gravity="center|right"
                android:singleLine="true"
                android:textSize="10.0sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@id/appdownloader_download_progress"
            style="@style/appdownloader_style_progress_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appdownloader_download_text"
            android:layout_marginTop="2.0dip"
            android:max="100" />
    </RelativeLayout>

    <TextView
        android:id="@id/appdownloader_action"
        style="@style/appdownloader_style_notification_title"
        android:layout_width="55.0dip"
        android:layout_height="30.0dip"
        android:layout_gravity="center|right"
        android:layout_marginLeft="18.0dip"
        android:layout_weight="0.0"
        android:background="@drawable/appdownloader_action_bg"
        android:gravity="center" />
</LinearLayout>