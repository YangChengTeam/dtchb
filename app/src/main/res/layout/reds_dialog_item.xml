<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:maxHeight="500dp"
        android:gravity="center_horizontal"
        android:background="@drawable/red_dialog_bg"
        android:orientation="vertical"
        android:layout_width="265dp"
        android:layout_height="400dp">
        <LinearLayout
            android:layout_marginTop="60dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_launcher"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="#FBE0A9"
                android:textSize="14sp"
                android:text="答题拆红包发出的红包"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="18dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="3dp"
            android:textColor="#FBE0A9"
            android:textSize="22sp"
            android:text="恭喜发财，大吉大利"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:visibility="visible"
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_getRedDes"
                android:layout_marginBottom="14dp"
                android:textColor="#FBE0A9"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                android:text="观看广告视频即可领取奖励"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginBottom="42dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:id="@+id/iv_open"
                android:src="@drawable/kai1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="22dp"
        android:visibility="visible"
        android:id="@+id/iv_close"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/close3"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
</LinearLayout>