<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f2f2f2"
    android:orientation="vertical"
    >
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="74dp">
        <RelativeLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_titles"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="提现任务"
                android:textColor="@color/A1_000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/line_moneyJunp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/homefg_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:minWidth="65dp"
                    android:background="@drawable/tv_red1"
                    android:layout_marginLeft="-12dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp">
                    <TextView
                        android:layout_marginLeft="15dp"
                        android:alpha="0.9"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/tv_money"
                        android:layout_centerVertical="true"
                        android:textColor="#FF1849"
                        android:textSize="14sp"
                        android:text="1.00"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"/>
                    <TextView
                        android:layout_marginRight="14dp"
                        android:layout_marginLeft="2dp"
                        android:textSize="11sp"
                        android:textColor="#FF1849"
                        android:text="元"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="-10dp"
                    android:background="@drawable/tv_red2"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:gravity="center"
                    android:text="提现"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:background="@color/gray_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.yc.wxchb.widget.ScrollWithRecyclerView
                android:paddingTop="10dp"
                android:id="@+id/limited_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">
                <com.yc.wxchb.widget.ScrollWithRecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>