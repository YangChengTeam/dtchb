<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_bg"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/line1"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/line_bg_white5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginTop="38dp"
            android:layout_width="wrap_content"
            android:layout_height="2dp"/>

        <TextView
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:id="@+id/tv_des"
            android:layout_marginTop="12dp"
            android:textColor="@color/A1_000000"
            android:textSize="17sp"
            android:text="请继续获取余额"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_sure"
            android:layout_marginBottom="25dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:gravity="center"
            android:text="我知道了"
            android:background="@drawable/tv_red8"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:background="@drawable/line_bg_white6"
        android:layout_width="80dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/withdraw_icon5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/line1"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_close"
        android:padding="8dp"
        android:src="@drawable/close3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>