<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/ll_bg"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/line_bg_red4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/A1_000000"
                android:textSize="12sp"
                android:text="*每日答对"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/red_FF2E30"
                android:textSize="12sp"
                android:text="*每日答对"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/A1_000000"
                android:textSize="12sp"
                android:text="道题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="3dp"
            android:textColor="@color/A1_000000"
            android:textSize="12sp"
            android:text="即可获得一次提现机会"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_withDraws_num"
                android:textStyle="bold"
                android:textColor="@color/red_FF2E30"
                android:textSize="12sp"
                android:text="100/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_withDraws_allNum"
                android:textStyle="bold"
                android:textColor="@color/A1_000000"
                android:textSize="12sp"
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_withDraws_status"
                android:layout_marginLeft="25dp"
                android:textStyle="bold"
                android:textColor="@color/A1_000000"
                android:textSize="12sp"
                android:text="完成"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_withDraws"
                android:layout_marginLeft="70dp"
                android:background="@drawable/line_bg_red6"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#FBF0E8"
                android:textSize="12sp"
                android:text="提现"
                android:layout_width="65dp"
                android:layout_height="24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="28dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_withDrawsTwo_num"
                android:textStyle="bold"
                android:textColor="@color/red_FF2E30"
                android:textSize="12sp"
                android:text="100/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_withDrawsTwo_allNum"
                android:textStyle="bold"
                android:textColor="@color/A1_000000"
                android:textSize="12sp"
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_withDrawsTwo_status"
                android:layout_marginLeft="25dp"
                android:textStyle="bold"
                android:textColor="@color/A1_000000"
                android:textSize="12sp"
                android:text="完成"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_withDrawsTwo"
                android:layout_marginLeft="70dp"
                android:background="@drawable/line_bg_red7"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/A1_999999"
                android:textSize="12sp"
                android:text="提现"
                android:layout_width="65dp"
                android:layout_height="24dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_close"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mrtx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:padding="5dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#FF2E30"
        android:background="@drawable/line_bg_red5"
        android:text="每日提现"
        android:layout_width="114dp"
        android:layout_height="32dp"/>
</RelativeLayout>