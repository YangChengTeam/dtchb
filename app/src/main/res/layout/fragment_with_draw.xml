<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F7F7"
     >

    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#F8E3B4"
            android:layout_width="match_parent"
            android:layout_height="37dp">
            <View
                android:alpha="0.6"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.yc.rrdsprj.widget.MyTextSwitchView
                android:id="@+id/textswitchView"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="38dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/msg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <com.yc.rrdsprj.widget.ScrollWithRecyclerView
            android:paddingTop="10dp"
            android:id="@+id/top_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            android:id="@+id/rela_nextAmout"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/line_bg_white5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/A1_000000"
                        android:textSize="15sp"
                        android:text="下一次提现还差"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/tv_ansnums"
                        android:textColor="#FD7609"
                        android:textSize="16sp"
                        android:text="20个"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/A1_000000"
                        android:textSize="15sp"
                        android:text="倒计时红包"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ProgressBar
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/progressbar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progressDrawable="@drawable/vip_reward_progress_bar_horizontal"
                    android:progress="30" />
                <TextView
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/A1_666666"
                    android:textSize="13sp"
                    android:text="完成任务即可提现！机会多多、金额不限！"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_gojump"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="立即提现"
                android:background="@drawable/line_bg_yellow3"
                android:layout_marginRight="13dp"
                android:layout_width="80dp"
                android:layout_height="32dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical"
            android:background="@drawable/line_bg_white5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:visibility="visible"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:text="账户"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/tv_recodeThree"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/A1_999999"
                    android:textSize="12sp"
                    android:text="提现记录>"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="1dp"
                        android:id="@+id/tv_cashMoney"
                        android:textStyle="bold"
                        android:textColor="@color/A1_333333"
                        android:textSize="29sp"
                        android:text="300"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:visibility="gone"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/A1_000000"
                        android:textSize="12sp"
                        android:text="元"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_withdrawRule"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/tv_bg_gray6"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:text="提现说明"
                    android:layout_width="73dp"
                    android:layout_height="29dp"/>
            </LinearLayout>

            <com.yc.rrdsprj.widget.ScrollWithRecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_desTitle"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:textColor="#798897"
                android:textSize="14sp"
                android:text="0.3元提现说明："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_des"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="16dp"
                android:textColor="#FF334E"
                android:textSize="17sp"
                android:text="新人专享：累计答对5道题即可提现"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/line_sure"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/tixian_bg"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:text="点击提现"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/line_invation"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/line_bg_yellow11"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="68dp">
            <LinearLayout
                android:layout_marginLeft="17dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/A1_000000"
                    android:textSize="14sp"
                    android:text="分享好友，就可以直接提"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#E72903"
                    android:textSize="16sp"
                    android:text="55元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/A1_000000"
                    android:textSize="14sp"
                    android:text="高额奖励"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="bottom"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="13dp"
                    android:textColor="#E72903"
                    android:textSize="13sp"
                    android:text="【没有等级要求】快去提现吧！"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginRight="12dp"
                    android:textSize="13sp"
                    android:textColor="#FFE33B"
                    android:gravity="center"
                    android:text="去提现"
                    android:background="@drawable/line_bg_red8"
                    android:layout_width="60dp"
                    android:layout_height="22dp"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>