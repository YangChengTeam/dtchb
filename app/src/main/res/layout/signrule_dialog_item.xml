<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_bg"
    android:orientation="vertical"
    android:maxHeight="350dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/line_bg_white5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="23dp"
            android:id="@+id/tv_title"
            android:gravity="center"
            android:textColor="@color/A1_000000"
            android:textSize="17sp"
            android:text="规则说明"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:minHeight="130dp"
            android:layout_height="235dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_contents"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#666666"
                    android:text=""
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_marginBottom="17dp"
            android:id="@+id/rela_sure"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/tvSure1"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/line_bg_green14"
                android:text="我知道了"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <TextView
                android:id="@+id/tvSure2"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/tv_red8"
                android:text="我知道了"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>