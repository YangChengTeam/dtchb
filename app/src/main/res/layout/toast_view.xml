<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/tv_bg_gray9"
    android:orientation="horizontal"
    android:id="@+id/line_item"
    android:gravity="center"
    android:layout_height="40dp">
    <RelativeLayout
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_type"
            android:src="@drawable/quan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginLeft="2dp"
            android:visibility="gone"
            android:id="@+id/iv_typeTwo"
            android:src="@drawable/zhuanicon1"
            android:layout_width="24dp"
            android:layout_height="34dp"/>
    </RelativeLayout>
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/tv_contents"
        android:textColor="@color/A1_333333"
        android:textSize="15sp"
        android:layout_marginLeft="3dp"
        android:text="夺宝券+"
        android:layout_width="wrap_content"
        android:layout_height="38dp"/>
    <TextView
        android:id="@+id/tv_money"
        android:layout_marginRight="12dp"
        android:textColor="@color/A1_FF0000"
        android:textSize="15sp"
        android:layout_marginLeft="1dp"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>