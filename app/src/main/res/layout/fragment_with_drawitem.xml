<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homeModule.fragment.WithDrawitemFragment">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <LinearLayout
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:background="@drawable/line_bg_yellow9"
          android:layout_marginTop="20dp"
          android:layout_marginRight="18dp"
          android:layout_marginLeft="18dp"
          android:layout_width="match_parent"
          android:layout_height="63dp">
         <RelativeLayout
             android:layout_marginLeft="18dp"
             android:id="@+id/rela_avatar"
             android:layout_width="wrap_content"
             android:layout_height="36dp">
            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_marginLeft="16dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_head"
                android:layout_width="36dp"
                android:layout_height="36dp"/>
            <RelativeLayout
                android:layout_marginLeft="3dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_scale"
                android:layout_width="53dp"
                android:layout_height="17dp">
               <TextView
                   android:id="@+id/tv_rank"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="6dp"
                   android:layout_alignParentRight="true"
                   android:textColor="@color/A1_EA5422"
                   android:textSize="12sp"
                   android:text="LV.1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
            </RelativeLayout>
         </RelativeLayout>

         <LinearLayout
             android:layout_marginLeft="18dp"
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
               <TextView
                   android:textColor="@color/A1_000000"
                   android:textSize="16sp"
                   android:text="完成"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textColor="#FB9E3E"
                   android:textSize="16sp"
                   android:text="今日任务"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textColor="@color/A1_000000"
                   android:textSize="16sp"
                   android:text="可升级"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="3dp"
                android:textColor="#FF5352"
                android:textSize="12sp"
                android:text="(点击下方“领取”可升级提现）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
         </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:gravity="center_vertical"
          android:background="@drawable/line_bg_yellow11"
          android:layout_marginTop="18dp"
          android:layout_marginRight="18dp"
          android:layout_marginLeft="18dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="78dp">
          <LinearLayout
              android:layout_weight="1"
              android:paddingLeft="15dp"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_height="match_parent">
             <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:text="距离下次"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#E72903"
                    android:textSize="12sp"
                    android:text="提现"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:text="还有任务未完成"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
             </LinearLayout>
             <ProgressBar
                 android:id="@+id/progressbar_reward"
                 style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="8dp"
                 android:layout_marginEnd="30dp"
                 android:progressDrawable="@drawable/vip_reward_progress_bar_horizontal"
                 android:progress="30"
                 android:layout_marginTop="6dp"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:textColor="@color/A1_999999"
                    android:textSize="10sp"
                    android:text="答题即可提现！机会多多、金额不限"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
          </LinearLayout>

         <TextView
             android:id="@+id/tv_go"
             android:textColor="#E72903"
             android:background="@drawable/line_bg_red1"
             android:layout_marginLeft="12dp"
             android:layout_marginRight="12dp"
             android:gravity="center"
             android:textSize="12sp"
             android:text="去完成"
             android:layout_width="61dp"
             android:layout_height="26dp"/>
      </LinearLayout>

      <LinearLayout
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <TextView
             android:layout_marginLeft="20dp"
             android:layout_weight="1"
             android:textSize="16sp"
             android:textColor="@color/A1_000000"
             android:text="每日提现"
             android:layout_width="0dp"
             android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/tv_recodetwo"
             android:layout_marginRight="20dp"
             android:textColor="@color/A1_999999"
             android:textSize="10sp"
             android:text="提现记录>"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
      </LinearLayout>
      <com.yc.qqzz.widget.ScrollWithRecyclerView
          android:id="@+id/dayuprecyclerView"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      <LinearLayout
          android:layout_marginTop="12dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_marginLeft="20dp"
              android:layout_weight="1"
              android:textSize="16sp"
              android:textColor="@color/A1_000000"
              android:text="常规提现"
              android:layout_width="0dp"
              android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/tv_recode"
             android:layout_marginRight="20dp"
             android:textColor="@color/A1_999999"
             android:textSize="10sp"
             android:text="提现记录>"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
      </LinearLayout>
      <com.yc.qqzz.widget.ScrollWithRecyclerView
          android:id="@+id/recyclerView"
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_marginBottom="30dp"
          android:id="@+id/tv_sure"
          android:layout_marginTop="22dp"
          android:gravity="center"
          android:textColor="@color/white"
          android:textSize="16sp"
          android:background="@drawable/line_bg_yellow8"
          android:layout_marginLeft="18dp"
          android:layout_marginRight="18dp"
          android:text="立即提现"
          android:layout_width="match_parent"
          android:layout_height="45dp"/>
   </LinearLayout>
</androidx.core.widget.NestedScrollView>