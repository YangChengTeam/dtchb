<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/A1_666666"
        android:textSize="12sp"
        android:visibility="gone"
        android:id="@+id/tv_times"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="12522"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="9dp"
            android:src="@drawable/icon_square"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_diialog_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/line_member"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:orientation="vertical"
            android:layout_marginRight="68dp"
            android:background="@drawable/line_bg_white2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/A1_333333"
                    android:textSize="15sp"
                    android:text="您的等级："
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/groupRank"
                    android:textColor="#DA7420"
                    android:textSize="15sp"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_des"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/A1_333333"
                    android:textSize="15sp"
                    android:text="完成每日等级任务即可升级20级会员可以享受会员收益，详情查看会员"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>