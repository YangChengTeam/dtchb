<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_bg"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/line1"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/line_bg_white5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginTop="45dp"
            android:layout_width="wrap_content"
            android:layout_height="2dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_marginTop="6dp"
                android:background="@drawable/line_bg_red8"
                android:layout_width="8dp"
                android:layout_height="8dp"/>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvs"
                    android:textColor="#715500"
                    android:textSize="15sp"
                    android:text="完成n个倒计时红包任务"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#715500"
                    android:textSize="15sp"
                    android:text="可以提现"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_sure1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:background="@drawable/line_bg_red8"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:text="去提现"
                android:layout_width="68dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_marginTop="6dp"
                android:background="@drawable/line_bg_red8"
                android:layout_width="8dp"
                android:layout_height="8dp"/>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#715500"
                    android:textSize="15sp"
                    android:text="无门槛，现金红包墙可  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#715500"
                    android:textSize="15sp"
                    android:text="直接提现"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_sure2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:background="@drawable/line_bg_red8"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:text="去提现"
                android:layout_width="68dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:background="@drawable/line_bg_white6"
        android:layout_width="80dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/withdraw_icon5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>