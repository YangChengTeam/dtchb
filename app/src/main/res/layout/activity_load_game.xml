<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
     >
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/flbg"
        android:layout_width="match_parent"
        android:layout_height="235dp"/>
    <RelativeLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/top_return_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="任务详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="71dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginRight="19dp"
                android:layout_marginLeft="19dp"
                android:background="@drawable/line_bg_white5"
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <ImageView
                        android:id="@+id/iv_icon"
                        android:scaleType="fitXY"
                        android:layout_width="53dp"
                        android:layout_height="53dp"/>
                    <LinearLayout
                        android:layout_marginLeft="7dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_title"
                            android:textSize="16sp"
                            android:textColor="@color/A1_000000"
                            android:text="轻趣赚赚"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_des"
                            android:layout_marginTop="2dp"
                            android:textSize="12sp"
                            android:textColor="@color/gray_999999"
                            android:text="下载试玩，返回即可提现"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/line_down"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/icon_unaccalimed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_moneys"
                                android:layout_marginLeft="3dp"
                                android:textSize="10sp"
                                android:textColor="#FE4C3E"
                                android:text="最高50元"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="22dp"
                    android:gravity="center_vertical"
                    android:textColor="#FF0000"
                    android:textSize="14sp"
                    android:text="下载安装>领取现金"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <FrameLayout
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/fl_update"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="24dp">
                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:id="@+id/pb_update"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/layer_list_update_progress_drawabletwo" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/tv_update"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="立即下载"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"></TextView>
                </LinearLayout>
            </FrameLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>