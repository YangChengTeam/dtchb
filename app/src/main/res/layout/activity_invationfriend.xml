<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/invations_bg"
    >

    <RelativeLayout
        android:layout_marginTop="90dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:visibility="invisible"
        android:id="@+id/rela_shareImg"
        android:layout_width="match_parent"
        android:layout_height="500dp">
        <ImageView
            android:visibility="visible"
            android:src="@drawable/share_bg5"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>
        <ImageView
            android:id="@+id/ivCode"
            android:layout_marginTop="194dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:layout_width="93dp"
            android:layout_height="93dp"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_marginTop="85dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/line_bg_white5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="129dp">

                <View
                    android:background="@drawable/line_bg_yellow2"
                    android:layout_width="match_parent"
                    android:layout_height="11dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/line_codes"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的邀请码"
                            android:textColor="@color/A1_000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_invitation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="555459"
                            android:textColor="#FF1849"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="58dp"
                            android:layout_height="26dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/tv_red4"
                            android:gravity="center"
                            android:text="复制"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <View
                        android:layout_gravity="center"
                        android:background="#798897"
                        android:layout_width="0.5dp"
                        android:layout_height="86dp"/>
                    <LinearLayout
                        android:id="@+id/line_inputCode"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:textColor="@color/A1_000000"
                            android:textSize="14sp"
                            android:text="填写邀请码"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                       <LinearLayout
                           android:layout_marginTop="3dp"
                           android:gravity="center"
                           android:orientation="vertical"
                           android:background="@drawable/tv_red4"
                           android:layout_width="83dp"
                           android:layout_height="53dp">
                           <ImageView
                               android:src="@drawable/invations_edit"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>
                           <TextView
                               android:textSize="14sp"
                               android:layout_marginTop="2dp"
                               android:textColor="@color/white"
                               android:text="点击填写"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>

                       </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/line_bg_white5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@drawable/line_bg_yellow2"
                    android:layout_width="match_parent"
                    android:layout_height="11dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="10dp"
                            android:textColor="@color/A1_000000"
                            android:textSize="14sp"
                            android:text="已邀请"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:id="@+id/tv_invitation_nums"
                            android:textSize="26sp"
                            android:textColor="#FF1849"
                            android:text="1人"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <View
                        android:visibility="gone"
                        android:background="#E2E2E2"
                        android:layout_width="0.6dp"
                        android:layout_height="50dp"/>
                    <LinearLayout
                        android:visibility="gone"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="2dp"
                            android:textColor="@color/A1_999999"
                            android:textSize="14sp"
                            android:text="有效人数"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_efficientNum"
                            android:textSize="26sp"
                            android:textColor="#FFAB03"
                            android:text="200"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/invations_icon1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="8dp"
                            android:textColor="#798897"
                            android:textSize="11sp"
                            android:text="好友完成提现"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="30dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="10dp"
                            android:textColor="@color/A1_000000"
                            android:textSize="14sp"
                            android:text="有效好友"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:id="@+id/tv_canExchangeNum"
                            android:textSize="26sp"
                            android:textColor="#FF1849"
                            android:text="3人"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:id="@+id/line_qq"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/invations_qq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:textColor="#cccccc"
                            android:textSize="12sp"
                            android:text="QQ好友"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/line_weixin"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/invations_wx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:textColor="#cccccc"
                            android:textSize="12sp"
                            android:text="微信好友"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:id="@+id/line_lianjie"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/invations_lianjie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:textColor="#cccccc"
                            android:textSize="12sp"
                            android:text="复制链接"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="13dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/line_bg_white5"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:background="@drawable/line_bg_yellow2"
                            android:layout_width="match_parent"
                            android:layout_height="11dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/withDraw_recyclerView"
                            android:layout_width="match_parent"
                            android:layout_marginTop="24dp"
                            android:layout_marginRight="14dp"
                            android:layout_marginBottom="13dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/tv_exchange"
                            android:layout_marginBottom="16dp"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:text="兑换邀请奖励"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="80dp"
                            android:background="@drawable/invations_bg2"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>
                    </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="11dp"
            android:padding="10dp"
            android:src="@drawable/invations_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/invations_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/line_invation_people"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/tv_bg_gray19"
            android:layout_width="30dp"
            android:layout_height="90dp">
            <TextView
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="邀"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="请"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="明"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="细"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="23dp"
            android:id="@+id/line_rule"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/tv_bg_gray19"
            android:layout_width="30dp"
            android:layout_height="90dp">
            <TextView
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="规"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="则"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="说"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="明"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>