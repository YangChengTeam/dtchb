<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="40dp"
        android:minHeight="380dp"
        android:minWidth="270dp"
        android:maxHeight="500dp"
        android:gravity="center_horizontal"
        android:background="@drawable/red_envelope_bg"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_weight="5"
        android:layout_height="0dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/white"
                android:text="答题目赚红包"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:id="@+id/tv_tips"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="85dp"
                android:text="简单难度只需要完成答题就能升级哦！"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="78dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/tv_money"
                    android:textColor="@color/A1_FFE2AA"
                    android:textSize="72sp"
                    android:text="0.20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/A1_FFE2AA"
                    android:textSize="26sp"
                    android:text="元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:id="@+id/line_getRed"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:gravity="center_horizontal"
                    android:id="@+id/iv_open"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/red_ans"
                    android:layout_width="95dp"
                    android:layout_height="95dp"/>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rela_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:alpha="0.7"
                    android:visibility="visible"
                    android:textSize="15sp"
                    android:id="@+id/tv_answerDes"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_close"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_close"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

    </RelativeLayout>
</LinearLayout>