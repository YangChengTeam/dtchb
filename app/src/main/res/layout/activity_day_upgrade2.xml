<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/prizeup1"
    android:gravity="center_horizontal"
    tools:context=".homeModule.activity.DayUpgradeActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="71dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="160dp"
                android:textSize="15sp"
                android:textColor="#CB5454"
                android:gravity="center"
                android:background="@drawable/layer2"
                android:text="剩余抽奖次数："
                android:layout_width="200dp"
                android:layout_height="43dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="390dp">
                <RelativeLayout
                    android:visibility="visible"
                    android:background="@drawable/line_bg_white7"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="400dp">
                    <RelativeLayout
                        android:background="@drawable/line_bg_yellow15"
                        android:layout_marginBottom="22dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="310dp"
                        android:layout_height="310dp"/>

                </RelativeLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:background="@drawable/line_bg_red9"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <ImageView
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/soul1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.yc.qqzz.widget.MyTextSwitchView
                        android:id="@+id/textswitchView"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"/>
                </LinearLayout>
                <com.yc.qqzz.widget.NineLuckPan
                    android:layout_marginBottom="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/nineluckpan"
                    android:layout_width="280dp"
                    android:layout_height="280dp">
                </com.yc.qqzz.widget.NineLuckPan>
                <LinearLayout
                    android:id="@+id/line_start"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="173dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:text="开始"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="23sp"
                        android:text="抽奖"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


        <LinearLayout
            android:layout_alignParentBottom="true"
            android:background="@drawable/line_bg_yellow1"
            android:id="@+id/line_snatchTreasure"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <LinearLayout
                android:id="@+id/line_memberss"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/qhb_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:textSize="11sp"
                    android:textColor="@color/A1_333333"
                    android:text="抢红包"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/line_answer"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_ac"
                    android:src="@drawable/dt_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:textSize="11sp"
                    android:textColor="@color/A1_333333"
                    android:text="答题"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/line_withdraw"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/sj_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="4dp"
                    android:textSize="11sp"
                    android:textColor="@color/A1_333333"
                    android:text="升级·提现"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>