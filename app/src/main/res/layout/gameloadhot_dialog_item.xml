<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_bg"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/home_game_icon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="52dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#CF8802"
            android:textSize="25sp"
            android:text="恭喜获得活跃值"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_hotNums"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#FF464B"
            android:textSize="25sp"
            android:text="+532"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_sure"
            android:layout_marginTop="89dp"
            android:layout_gravity="center"
            android:src="@drawable/home_game_icon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:src="@drawable/close3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:padding="8dp"
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>