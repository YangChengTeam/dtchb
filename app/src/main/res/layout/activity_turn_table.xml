<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:luckpan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".homeModule.activity.TurnTableActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="3dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/top_return_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerInParent="true"
            android:textColor="@color/A1_000000"
            android:textSize="18sp"
            android:text="幸运大转盘"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="@drawable/tv_bg_gray4"
            android:id="@+id/tv_history"
            android:layout_marginRight="10dp"
            android:padding="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/A1_999999"
            android:textSize="12sp"
            android:text="收货地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:background="@color/A1_E2E2E2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="8dp"
                android:textColor="@color/A1_333333"
                android:textSize="12sp"
                android:text="每日12:00 18:00 00:00重置"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.yc.redevenlopes.homeModule.widget.LuckPanLayout
                    android:id="@+id/luckpan_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    >
                    <com.yc.redevenlopes.homeModule.widget.RotatePan
                        android:id="@+id/rotatePan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        luckpan:pannum="6"
                        luckpan:names="@array/names"
                        luckpan:icons="@array/icons"
                        android:layout_centerHorizontal="true" />
                    <ImageView
                        android:id="@+id/go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/zhuanpan"
                        android:clickable="true"
                        android:tag="startbtn"
                        />

                </com.yc.redevenlopes.homeModule.widget.LuckPanLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_go"
                android:layout_marginTop="35dp"
                android:background="@drawable/line_bg_yellow5"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="#AB5B0F"
                android:text="免费抽奖"
                android:layout_width="210dp"
                android:layout_height="46dp"/>
            <LinearLayout
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/A1_333333"
                    android:textSize="12sp"
                    android:text="剩余次数："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_prizeNums"
                    android:textColor="#AB5B0F"
                    android:textSize="12sp"
                    android:text="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>