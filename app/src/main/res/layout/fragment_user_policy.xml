<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_round_bg">

    <TextView
        android:id="@+id/tv_user_policy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/user_policy_title"
        android:textColor="@color/black_333"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/gray_e2e2e2"
        app:layout_constraintTop_toBottomOf="@id/tv_user_policy_title" />


    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/tv_know_btn"
        app:layout_constraintTop_toBottomOf="@id/view_divider"/>


    <TextView
        android:id="@+id/tv_know_btn"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/dispose_gray_bg"
        android:gravity="center"
        android:text="@string/i_agree"
        android:textColor="@color/gray_999999"
        android:textSize="15sp"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>