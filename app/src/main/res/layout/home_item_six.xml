<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/A1_666666"
        android:textSize="12sp"
        android:visibility="gone"
        android:id="@+id/tv_times"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="12522"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="9dp"
            android:src="@drawable/icon_square"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_diialog_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginRight="68dp"
            android:id="@+id/line_itemSix"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/line_bg_white2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_square"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/A1_666666"
                    android:textSize="15sp"
                    android:text="升级提醒"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_des"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/A1_333333"
                android:textSize="16sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="斯卡迪根据考试的卡萨丁根据快递师傅"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="12dp"
                android:id="@+id/iv_top"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="170dp"/>
             <View
                 android:layout_marginTop="12dp"
                 android:background="#e2e2e2"
                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="33dp">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/zhuanicon1"
                    android:layout_width="17dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/gray_999999"
                    android:textSize="14sp"
                    android:text="点击前往完成"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>