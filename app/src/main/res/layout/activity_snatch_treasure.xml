<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".homeModule.activity.SnatchTreasureActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="3dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/top_return_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/A1_000000"
                android:textSize="18sp"
                android:text="夺宝奇兵"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_prizePeriods"
                android:textColor="@color/A1_000000"
                android:text="第368期"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_history"
            android:layout_marginRight="10dp"
            android:padding="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textColor="@color/A1_333333"
            android:textSize="15sp"
            android:text="开奖历史"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:background="@color/gray_e2e2e2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/A1_666666"
                            android:textSize="13sp"
                            android:text="全服累计夺宝次数："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_snatchCurrNums"
                            android:text=""
                            android:textSize="13sp"
                            android:textColor="@color/A1_FF0000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="3dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:id="@+id/progressbar"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="50"
                            style="@style/progressbars"
                            android:layout_width="0dp"
                            android:layout_height="8dp"/>
                        <ImageView
                            android:layout_marginLeft="-5dp"
                            android:src="@drawable/prize1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="135dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="17dp"
                            android:textColor="@color/A1_999999"
                            android:textSize="13sp"
                            android:text="本期奖金"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_marginBottom="6dp"
                            android:layout_marginLeft="28dp"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <ImageView
                                android:src="@drawable/icon_redenvelope"
                                android:layout_width="27dp"
                                android:layout_height="33dp"/>
                            <TextView
                                android:id="@+id/tv_money"
                                android:layout_marginLeft="8dp"
                                android:textColor="@color/A1_333333"
                                android:textSize="25sp"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_gravity="center_vertical"
                        android:background="@color/gray_e2e2e2"
                        android:layout_width="0.6dp"
                        android:layout_height="67dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="13dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/A1_666666"
                                android:textSize="13sp"
                                android:text="首次夺宝时间:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_firstSantchTimes"
                                android:textColor="@color/A1_333333"
                                android:textSize="13sp"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_marginBottom="6dp"
                            android:layout_marginLeft="13dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:layout_width="94dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textColor="@color/gray_999999"
                                    android:textSize="13sp"
                                    android:text="当前时间："
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/tv_SysCurrTimesTimes"
                                    android:layout_marginTop="3dp"
                                    android:textColor="@color/A1_333333"
                                    android:textSize="16sp"
                                    android:text=""
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <View
                                android:layout_gravity="center_vertical"
                                android:background="@color/gray_e2e2e2"
                                android:layout_width="0.6dp"
                                android:layout_height="37dp"/>
                            <LinearLayout
                                android:layout_marginLeft="22dp"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textColor="@color/gray_999999"
                                    android:textSize="13sp"
                                    android:text="预计开奖："
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/tv_yuOpenPrizeTimes"
                                    android:layout_marginTop="3dp"
                                    android:textColor="@color/A1_333333"
                                    android:textSize="16sp"
                                    android:text=""
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@color/f2f2f2"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"/>
                <LinearLayout
                    android:id="@+id/line_ruleDetails"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="38dp">
                    <TextView
                        android:layout_marginLeft="17dp"
                        android:textColor="@color/A1_333333"
                        android:textSize="17sp"
                        android:text="规则"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="#268CFF"
                        android:textSize="12sp"
                        android:text="详细规则"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/back_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/A1_E2E2E2"
                    android:layout_width="match_parent"
                    android:layout_height="0.4dp"/>
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/iv_snatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginTop="4dp"
                    android:background="@color/f2f2f2"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"/>
                <LinearLayout
                    android:minHeight="70dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/A1_999999"
                        android:textSize="14sp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="13dp"
                        android:text="我的夺宝号"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:id="@+id/line_mySnatch"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:singleLine="true"
                            android:layout_marginRight="30dp"
                            android:layout_weight="1"
                            android:id="@+id/tv_mySnatchNums"
                            android:layout_marginLeft="17dp"
                            android:text=""
                            android:textColor="@color/A1_333333"
                            android:textSize="14sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_all"
                            android:layout_marginRight="14dp"
                            android:background="@drawable/tv_bg_gray8"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textColor="@color/gray_999999"
                            android:textSize="13sp"
                            android:text="全部"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginTop="14dp"
                    android:background="@color/f2f2f2"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"/>
                <TextView
                    android:textColor="@color/A1_999999"
                    android:textSize="14sp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="13dp"
                    android:text="我的券"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/quan2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_quanNums"
                            android:layout_marginLeft="6dp"
                            android:textColor="@color/A1_333333"
                            android:textSize="20sp"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/line_snatchsOne"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/tv_bg_gray2"
                        android:layout_width="90dp"
                        android:layout_height="49dp">
                        <TextView
                            android:id="@+id/tv_snatchsOneTitle"
                            android:textColor="#656565"
                            android:text="连续夺宝"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/iv_quan1"
                                android:src="@drawable/quan1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_lianxuQuanNums"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/A1_999999"
                                android:textSize="14sp"
                                android:text="5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/line_snatchsTwo"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/line_bg_yellow4"
                        android:layout_width="90dp"
                        android:layout_height="49dp">
                        <TextView
                            android:id="@+id/tv_snatchsTwoTitle"
                            android:textColor="#ffffff"
                            android:text="连续夺宝"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/iv_quan2"
                                android:src="@drawable/quan2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_onceNumsQuan"
                                android:layout_marginLeft="5dp"
                                android:textColor="#ffffff"
                                android:textSize="14sp"
                                android:text="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:id="@+id/fl_ad_containessss"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        ></FrameLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <include
            android:id="@+id/view_nodata"
            layout="@layout/nodata_view"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>