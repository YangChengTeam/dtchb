<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/bg_5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="430dp">
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="58dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_moneys"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textSize="80sp"
                android:textColor="#DF1341"
                android:text="30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="2dp"
                android:textStyle="bold"
                android:textColor="#DF1341"
                android:textSize="36sp"
                android:text="元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_marginTop="75dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="#FFE2C4"
                    android:text="程序问题导致开奖结果错误"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="#FFE2C4"
                    android:text="已为您发放3倍补偿金到您账户"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_sures"
                android:textStyle="bold"
                android:paddingBottom="2dp"
                android:gravity="center"
                android:textColor="#C41713"
                android:textSize="18sp"
                android:text="我知道了"
                android:background="@drawable/icon_btn3"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="65dp"
                android:layout_marginBottom="46dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>