<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginLeft="9dp"
        android:src="@drawable/icon_square"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <ImageView
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_diialog_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="12dp"
        android:orientation="vertical"
        android:layout_marginRight="68dp"
        android:background="@drawable/line_bg_white2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_groupName"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/A1_333333"
            android:textSize="15sp"
            android:text="欢迎来到"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/A1_333333"
                android:textSize="15sp"
                android:text="群人数："
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/groupNums"
                android:textColor="#DA7420"
                android:textSize="15sp"
                android:text="400人"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/A1_333333"
                android:textSize="15sp"
                android:text="昨日平台收益："
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_yesterdayMoney"
                android:textColor="#DA7420"
                android:textSize="15sp"
                android:text="36363元"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/A1_333333"
                android:textSize="15sp"
                android:text="会员收益："
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_money"
                android:textColor="#DA7420"
                android:textSize="15sp"
                android:text="36363元"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/A1_333333"
                android:textSize="15sp"
                android:text="您的登录天数："
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_loginNums"
                android:textColor="#DA7420"
                android:textSize="15sp"
                android:text="2天"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="15dp"
                android:textColor="@color/A1_333333"
                android:textSize="15sp"
                android:text="今日手气红包数："
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_redNums"
                android:textColor="#DA7420"
                android:textSize="15sp"
                android:text="105个"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>