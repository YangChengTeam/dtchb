<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@id/tt_splash_express_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <FrameLayout
        android:id="@id/tt_splash_video_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.bytedance.sdk.openadsdk.core.widget.gif.GifView
        android:id="@id/tt_splash_ad_gif"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@id/tt_splash_video_ad_mute"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_gravity="start|center|top"
        android:layout_marginStart="16.0dip"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="16.0dip"
        android:src="@drawable/tt_splash_mute" />

    <com.bytedance.sdk.openadsdk.core.widget.TTCountdownView
        android:id="@id/tt_splash_skip_btn"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_gravity="end|center|top"
        android:layout_marginTop="16.0dip"
        android:layout_marginEnd="16.0dip"
        android:layout_marginRight="16.0dip" />

    <TextView
        android:id="@id/tt_ad_logo"
        android:layout_width="32.0dip"
        android:layout_height="12.0dip"
        android:layout_gravity="start|bottom|center"
        android:layout_marginLeft="12.0dip"
        android:layout_marginBottom="12.0dip"
        android:background="@drawable/tt_ad_logo_background"
        android:drawableStart="@drawable/tt_ad_logo"
        android:drawableLeft="@drawable/tt_ad_logo"
        android:drawablePadding="2.0dip"
        android:gravity="center"
        android:paddingStart="2.0dip"
        android:paddingLeft="2.0dip"
        android:text="@string/tt_ad_logo_txt"
        android:textColor="#ffffffff"
        android:textSize="7.0sp" />
</FrameLayout>