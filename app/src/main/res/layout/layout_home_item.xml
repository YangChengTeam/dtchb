<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="108dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="114dp">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/line_bg_white2"
        android:layout_width="105dp"
        android:layout_height="108dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_answer"
            android:layout_width="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_height="36dp">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv1"
                android:layout_marginLeft="9dp"
                android:src="@drawable/icon_treasure1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/iv1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/A1_333333"
                android:textSize="14sp"
                android:text="答题红包"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="4dp"
            android:id="@+id/cons_guess"
            android:layout_marginRight="4dp"
            android:layout_height="36dp">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv2"
                android:layout_marginLeft="9dp"
                android:src="@drawable/icon_treasure2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/iv2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/A1_333333"
                android:textSize="14sp"
                android:text="数字竞猜"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginLeft="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="4dp"
            android:id="@+id/cons_turn"
            android:layout_marginRight="4dp"
            android:layout_height="36dp">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv3"
                android:layout_marginLeft="9dp"
                android:src="@drawable/icon_treasure3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/iv3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/A1_333333"
                android:textSize="14sp"
                android:text="大转盘"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_treasure4"
        android:layout_width="wrap_content"
        android:layout_height="6dp"/>

</LinearLayout>