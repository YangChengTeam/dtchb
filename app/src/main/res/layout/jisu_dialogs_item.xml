<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_bg"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="38dp"
        android:id="@+id/line1"
        android:background="@drawable/line_bg_white5"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/videp_bg5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textColor="#000000"
                android:textSize="19sp"
                android:text="提现速度太慢了"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:text="你目前提现速度太慢"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="2dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:text="可以申请加快提现速度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="24dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/tv_red8"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:text="加快提现速度"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
    </LinearLayout>
    <ImageView
        android:layout_centerHorizontal="true"
        android:src="@drawable/videp_bg6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/line1"
        android:id="@+id/iv_close"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:src="@drawable/close3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>