<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="42dp"
        android:background="@drawable/line_bg_white5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="51dp"
            android:layout_gravity="center"
            android:textColor="#FE8E34"
            android:textSize="18sp"
            android:text="温馨提示"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:background="@drawable/line_bg_yellow11"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="68dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_launcher"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_marginTop="3dp"
                    android:textColor="@color/gray_666"
                    android:textSize="8sp"
                    android:text="阳光红包"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/updata2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_jumpLogo"
                    android:src="@drawable/ic_launcher"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:id="@+id/iv_jumpName"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/gray_666"
                    android:textSize="8sp"
                    android:text="阳光红包"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="22dp"
            android:layout_marginTop="18dp"
            android:textColor="@color/A1_666666"
            android:textSize="12sp"
            android:text="1.答题红包答题红包答题红包答题红包答 题红包答题红包"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_sure"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="点击跳转"
            android:background="@drawable/updata3"
            android:layout_marginTop="20dp"
            android:layout_marginRight="26dp"
            android:layout_marginLeft="26dp"
            android:layout_width="match_parent"
            android:layout_height="38dp"/>
        <TextView
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:textColor="#FF0000"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:text="有问题？请联系客服"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:background="@drawable/line_bg_yellow21"
        android:layout_width="85dp"
        android:layout_height="85dp">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/updata1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</RelativeLayout>