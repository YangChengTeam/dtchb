<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7"
   >
    <include layout="@layout/include_titlezq"/>
    <View
        android:background="#e2e2e2"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="19dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <LinearLayout
            android:id="@+id/line_layouts"
            android:background="@drawable/tv_red12"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_titles"
                android:layout_marginLeft="23dp"
                android:textSize="16sp"
                android:textColor="#FF1849"
                android:text="邮政快递"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginRight="17dp"
                android:src="@drawable/express_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
        </LinearLayout>

        <TextView
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/tv_red11"
            android:gravity="center"
            android:text="请选择"
            android:layout_width="70dp"
            android:layout_height="43dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/layer_red"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="28dp"
        android:layout_marginLeft="28dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_margin="14dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_contents"
                android:textColor="@color/A1_000000"
                android:textSize="13sp"
                android:text=""
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>